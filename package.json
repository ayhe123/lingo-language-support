{
    "name": "lingo-language-support",
    "displayName": "Lingo language support",
    "description": "Language support for Lingo text models",
    "publisher": "ayhe",
    "version": "1.0.0",
    "license": "MIT",
    "engines": {
        "vscode": "^1.63.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/ayhe123/lingo-language-support.git"
    },
    "icon": "img/icon.ico",
    "contributes": {
        "languages": [
            {
                "id": "lingo",
                "aliases": [
                    "Lingo",
                    "LINGO",
                    "lingo"
                ],
                "extensions": [
                    ".lng"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lingo",
                "scopeName": "source.lng",
                "path": "./syntaxes/lingo.tmLanguage.json"
            }
        ],
        "snippets": [
            {
                "language": "lingo",
                "path": "./snippets.json"
            }
        ]
    }
}